{
	"name": "pkgroll",
	"version": "0.0.0-semantic-release",
	"description": "Zero-config rollup bundler",
	"keywords": [
		"zero config",
		"rollup",
		"package.json",
		"exports",
		"esm",
		"cjs",
		"commonjs",
		"typescript",
		"declaration"
	],
	"license": "MIT",
	"repository": "privatenumber/pkgroll",
	"funding": "https://github.com/privatenumber/pkgroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"bin": "./dist/cli.js",
	"imports": {
		"typescript": "./src/local-typescript-loader.ts"
	},
	"scripts": {
		"build": "tsx src/cli.ts --minify --target node18",
		"test": "pnpm build && tsx tests/index.ts",
		"lint": "lintroll --cache --node --ignore-pattern tests/fixture-package .",
		"type-check": "tsc --noEmit",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"engines": {
		"node": ">=18"
	},
	"peerDependencies": {
		"typescript": "^4.1 || ^5.0"
	},
	"peerDependenciesMeta": {
		"typescript": {
			"optional": true
		}
	},
	"dependencies": {
		"@rollup/plugin-alias": "^5.1.0",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-inject": "^5.0.5",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-replace": "^5.0.5",
		"@rollup/pluginutils": "^5.1.0",
		"esbuild": "^0.20.1",
		"magic-string": "^0.30.10",
		"rollup": "^4.17.2",
		"rollup-plugin-natives": "^0.7.8"
	},
	"devDependencies": {
		"@types/node": "^20.12.12",
		"clean-pkg-json": "^1.2.0",
		"cleye": "^1.3.2",
		"execa": "^9.1.0",
		"fs-fixture": "^2.4.0",
		"get-node": "^15.0.1",
		"get-tsconfig": "^4.7.5",
		"kolorist": "^1.8.0",
		"lintroll": "^1.5.2",
		"manten": "^1.3.0",
		"outdent": "^0.8.0",
		"rollup-plugin-dts": "6.1.1",
		"tsx": "^4.10.5",
		"type-fest": "^4.18.2",
		"typescript": "^5.4.5"
	}
}
